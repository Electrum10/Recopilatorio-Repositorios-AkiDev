---
import Repositorio from "../components/Repositorio/repositorio.astro";
import Inicio from "../components/inicio.astro";
const username = 'electrum10';
const response = await fetch(`https://api.github.com/users/${username}/repos`);
const repos = await response.json();
---
<body>
    <Inicio />
    <div class="Repositorios">
        {repos.map(repo => (
            <Repositorio Titulo={repo.name} Imagen={"src/images/" + repo.name + ".png"} EnlaceAlRepositorio={repo.html_url} DescripciÃ³n={repo.description}/>
        ))}
    </div>
</body>

<style>
    body {
        position: relative;
        background-color: #f0f0f0;
        margin: 0 auto;
    }
    .Repositorios {
        position: relative;
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 2rem;
        padding-left: 10%;
        padding-right: 10%;
    }

    @media screen and (max-width: 1000px) {
        .Repositorios {
            grid-template-columns: repeat(2,1fr);
        }
    }
</style>

