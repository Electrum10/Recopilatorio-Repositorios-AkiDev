---
import Repositorio from "../components/repositorio.astro";

// Realizar la solicitud a la API de GitHub del lado del servidor
const username = 'electrum10';
const response = await fetch(`https://api.github.com/users/${username}/repos`);
const repos = await response.json();
---
<body>
    <div class="Repositorios" id="Repositorios">
        <!-- Renderizar el componente Repositorio para cada repo obtenido -->
        {repos.map(repo => (
            <Repositorio Titulo={repo.name} Imagen="Hola"/>
        ))}
    </div>
</body>

<style>
    body {
        background-color: #f0f0f0;
        padding-left: 10%;
        padding-right: 10%;
    }
    .Repositorios {
        display: grid;
        grid-template-columns: repeat(3,1fr);
        gap: 3rem;
    }
</style>

